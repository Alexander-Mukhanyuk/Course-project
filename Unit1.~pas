{$R *.dfm}



procedure TForm1.ExitClick(Sender: TObject);
begin
Close;
end;

procedure TForm1.N2Click(Sender: TObject);
var developer:string;
    p:PChar;
begin
    developer:='D:\Курсач\О разработчике\Project1.exe';
    p:=PChar(developer);
    ShellExecute(Form1.Handle,'Open',p,nil,nil,SW_SHOW);
end;

procedure TForm1.N3Click(Sender: TObject);
var programm:string;
    p:PChar;
begin
    programm:='D:\Курсач\О программе\Project1.exe';
    p:=PChar(programm);
    ShellExecute(Form1.Handle,'Open',p,nil,nil,SW_SHOW);
end;

